{
	"manifest_version": 2,

	"name": "ImageScrapBook",
	"description": "This extension is a tool to caputre image, store and share them",
	"version": "1.0",

	"browser_action": {
		"default_icon": "capture.png",
		"default_title": "ImageScrapBook",
		"default_popup": "popup.html"
	},
	  "background": {
	    "scripts": ["background.js"],
	    "persistent": false
		},
		"public": [
		"notifications", "activeTab", "tabs", "contextMenus", "clipboardWrite", "<all_urls>", "http://*/*", "https://*/*"
	]
}
